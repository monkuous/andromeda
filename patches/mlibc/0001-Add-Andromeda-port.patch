+int sys_execve(const char *path, char *const *argv, char *const *envp) {
+	int fd;
+	int error = sys_open(path, O_RDONLY | O_CLOEXEC, 0, &fd);
+	if (__builtin_expect(!!error, 0))
+		return error;
+	FileDescriptor _(fd);
+
+	size_t nargv = 0;
+	while (argv[nargv]) {
+		nargv++;
+	}
+
+	size_t nenvp = 0;
+	while (envp[nenvp]) {
+		nenvp++;
+	}
+
+	frg::vector<andromeda_tagged_string_t, MemoryAllocator> arg{getAllocator()};
+	frg::vector<andromeda_tagged_string_t, MemoryAllocator> env{getAllocator()};
+	arg.resize(nargv);
+	env.resize(nenvp);
+
+	for (size_t i = 0; i < nargv; i++) {
+		arg[i].data = argv[i];
+		arg[i].length = strlen(argv[i]);
+	}
+
+	for (size_t i = 0; i < nenvp; i++) {
+		env[i].data = envp[i];
+		env[i].length = strlen(envp[i]);
+	}
+
+	SYSCALL(5, SYS_EXEC, fd, arg.data(), nargv, env.data(), nenvp);
+	return 0;
+}
