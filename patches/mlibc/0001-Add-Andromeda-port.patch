+int sys_getcwd(char *buffer, size_t size) {
+	if (size == 0) {
+		return ERANGE;
+	}
+
+	size_t len = SYSCALL(2, SYS_GETCWD, buffer, size - 1).r1;
+	if (len >= size) {
+		return ERANGE;
+	}
+
+	buffer[len] = 0;
+	return 0;
+}
