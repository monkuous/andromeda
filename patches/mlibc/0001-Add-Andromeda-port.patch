+static int chdir_like(int syscall, const char *path) {
+	int fd;
+	int error = sys_open(path, O_PATH | O_CLOEXEC, 0, &fd);
+	if (__builtin_expect(!!error, 0)) {
+		return error;
+	}
+	FileDescriptor _(fd);
+
+	SYSCALL(1, syscall, fd);
+	return 0;
+}
