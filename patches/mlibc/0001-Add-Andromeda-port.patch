+typedef struct {
+	long r1;
+	long r2;
+} syscall_result_t;
+
+#define SYSCALL0(num)                                                                              \
+	({                                                                                             \
+		syscall_result_t r;                                                                        \
+		asm volatile("int $0x20" : "=a"(r.r1), "=d"(r.r2) : "a"(num) : "memory");                  \
