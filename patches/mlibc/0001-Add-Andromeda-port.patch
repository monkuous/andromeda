+int sys_waitid(idtype_t idtype, id_t id, siginfo_t *info, int options) {
+	pid_t pid;
+
+	switch (idtype) {
+		case P_PID:
+			if (id < 1 || id > INT_MAX) {
+				return EINVAL;
+			}
+
+			pid = (pid_t)id;
+			break;
+		case P_PGID:
+			if (id < 2 || id > INT_MAX) {
+				return EINVAL;
+			}
+
+			pid = -(pid_t)id;
+			break;
+		case P_ALL:
+			pid = -1;
+			break;
+		default:
+			return EINVAL;
+	}
+
+	SYSCALL(3, SYS_PWAIT, pid, options, info);
+	return 0;
+}
