+int sys_waitpid(pid_t pid, int *status, int flags, struct rusage *, pid_t *ret_pid) {
+	if (flags & ~(WCONTINUED | WNOHANG | WUNTRACED))
+		return EINVAL;
+
+	flags |= WEXITED;
+
+	if (flags & WUNTRACED) {
+		flags &= ~WUNTRACED;
+		flags |= WSTOPPED;
+	}
+
+	siginfo_t info;
+	*ret_pid = SYSCALL(3, SYS_PWAIT, pid, flags, &info).r1;
+
+	switch (info.si_code) {
+		case CLD_EXITED:
+			*status = W_EXITCODE(info.si_status & 0xff, 0);
+			break;
+		case CLD_KILLED:
+			*status = info.si_status & 0x7f;
+			break;
+		case CLD_DUMPED:
+			*status = (info.si_status & 0x7f) | 0x80;
+			break;
+		case CLD_STOPPED:
+			*status = W_EXITCODE(info.si_status & 0x7f, 0x7f);
+			break;
+		case CLD_CONTINUED:
+			*status = 0xffff;
+			break;
+		default:
+			return EINVAL;
+	}
+
+	return 0;
+}
